#系統安裝完成
reboot
apk add nano
nano /etc/apk/repositories
#取消備註
apk update; apk upgrade
apk add tree unzip curl wget zip grep bash procps util-linux-misc dialog go udev sudo 
echo -e "tao\ntao" | adduser -s /bin/bash tao
addgroup tao wheel
nano /etc/sudoers
#%wheel ALL=(ALL) NOPASSWD: ALL
nano /etc/sysctl.conf
#加入net.ipv6.conf.all.disable_ipv6 = 1
poweroff
#刪除VM的DVD

#ssh登入使用者tao
ssh-keygen -t rsa -P ''
#案ENTER
cp ~/.ssh/id_rsa.pub ~/.ssh/authorized_keys
#加入遠端工作機的公鑰
echo 'StrictHostKeyChecking no' | sudo tee -a /etc/ssh/ssh_config;echo 'PermitUserEnvironment yes' | sudo tee -a cat /etc/ssh/sshd_config
sudo reboot

#K8S前置作業
sudo apk add docker etcd
sudo rc-update add docker boot
sudo addgroup tao docker
sudo modprobe br_netfilter
echo 1 |sudo tee /proc/sys/net/bridge/bridge-nf-call-iptables;echo 1 |sudo tee /proc/sys/net/ipv4/ip_forward contents;sudo reboot
